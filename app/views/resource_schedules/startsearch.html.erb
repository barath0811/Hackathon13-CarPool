<div class="row-fluid" style="display:inline-block; vertical-align: middle">
    <div class="span12">
        <span style="padding:5px">
            <% if @searchcriteria == "car" %>
    	       <a href="/search?q=fc" class="btn btn-primary btn-large active"><img src="/assets/icon_HireACar.png"> Find Cars</a>
            <%else%>
                <a href="/search?q=fc" class="btn btn-success btn-large active"><img src="/assets/icon_HireACar.png"> Find Cars</a>
            <%end%>
        </span>
        <span style="padding:5px">
            <% if @searchcriteria == "pass" %>
                <a href="/search?q=fp" class="btn btn-large  btn-primary active"><img src="/assets/icon_HirePassenger.png"> Find Passengers</a>
            <%else%>
                <a href="/search?q=fp" class="btn btn-large btn-success active"><img src="/assets/icon_HirePassenger.png"> Find Passengers</a>
            <%end%>

        </span>
        <span style="padding:5px">
            <% if @searchcriteria == "group" %>
                <a href="/search?q=gh" class="btn btn-large  btn-primary active"><img src="/assets/icon_GroupHire.png"> Group Hire a Car</a>
            <%else%>
                <a href="/search?q=gh" class="btn btn-large  btn-success active"><img src="/assets/icon_GroupHire.png"> Group Hire a Car</a>
            <%end%>
        </span>
    </div>
 </div>
<br/><br/><br/>
<% if @searchcriteria == "car" %>

    <div class="row-fluid" style="display:inline-block; vertical-align: middle">
        <div class="span12">
            <div class="page-header">
                    <h1>
                        <small>Find cars for your commute</small>
                    </h1>
            </div>
        </div>
    </div>    

	<%= render :partial => 'search' %>

<% elsif @searchcriteria == "pass" %>

    <div class="row-fluid" style="display:inline-block; vertical-align: middle">
        <div class="span12">
            <div class="page-header">
                    <h1>
                        <small>Find passengers to accompany you in your commute</small>
                    </h1>
            </div>
        </div>
    </div>    
	<%= render :partial => 'passsearch' %>
<% else%>
    <div class="row-fluid" style="display:inline-block; vertical-align: middle">
        <div class="span12">
            <div class="page-header">
                    <h1>
                        <small>Find other passengers who do not have a car and hire a car together.</small>
                    </h1>
            </div>
        </div>
    </div>    
    <%= render :partial => 'passsearch' %>
<% end %> 	
	<br/><br/>


<div id="search_div">
<% if @display == "empty" %>
	<%= render :partial => 'list' %>
<% else %>
	<%= render :partial => 'result' %>
<% end %>
</div>

