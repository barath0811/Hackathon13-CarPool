<%- model_class = Preference -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id_id) %></th>
      <th><%= model_class.human_attribute_name(:copassangerGender) %></th>
      <th><%= model_class.human_attribute_name(:acNonac) %></th>
      <th><%= model_class.human_attribute_name(:carModel) %></th>
      <th><%= model_class.human_attribute_name(:maxCapacity) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:startTime) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= link_to preference.id, preference_path(preference) %></td>
        <td><%= preference.user_id_id %></td>
        <td><%= preference.copassangerGender %></td>
        <td><%= preference.acNonac %></td>
        <td><%= preference.carModel %></td>
        <td><%= preference.maxCapacity %></td>
        <td><%= preference.from %></td>
        <td><%= preference.to %></td>
        <td><%= preference.startTime %></td>
        <td><%=l preference.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_preference_path(preference), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      preference_path(preference),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_preference_path,
            :class => 'btn btn-primary' %>
